datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  todos    Todo[]
  roles    Role[] @default([USER])
}

enum Role {
  USER
  ADMIN
}

model Todo {
  id        String  @id @default(uuid())
  title     String
  completed Boolean @default(false)
  user      User    @relation(fields: [userId], references: [id])
  userId    String
}
